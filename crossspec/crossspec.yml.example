version: 1
project:
  name: "Example Project"
  repo_root: "."
outputs:
  claims_dir: "outputs"
  jsonl_filename: "claims.jsonl"
knowledge_sources:
  - name: "Spec PDFs"
    type: pdf
    authority: normative
    paths:
      - "docs/**/*.pdf"
  - name: "Requirements Spreadsheet"
    type: xlsx
    authority: approved_interpretation
    paths:
      - "data/requirements.xlsx"
    xlsx:
      tables:
        - sheet: "Sheet1"
          text_columns: ["Question", "Answer", "Status", "Owner"]
          authority_by:
            Status:
              Draft: informative
              Approved: normative
  - name: "Slide Decks"
    type: pptx
    authority: informative
    paths:
      - "slides/**/*.pptx"
    pptx:
      unit: slide
      include_notes: true
  - name: "Email Threads"
    type: eml
    authority: unverified
    paths:
      - "mail/**/*.eml"
    mail:
      include_headers: ["From", "To", "Date", "Subject", "Message-ID"]

